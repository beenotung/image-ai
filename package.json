{
  "name": "image-ai",
  "version": "0.0.0",
  "scripts": {
    "start": "run-p main tsc:watch",
    "main": "electron -r ts-node/register main.ts",
    "tsc:watch": "tsc -p . --watch",
    "test": "tsc --noEmit",
    "build": "tsc -p .",
    "db:dev": "run-s db:update db:plan db:update",
    "db:plan": "auto-migrate db.sqlite3 < erd.txt",
    "db:update": "knex migrate:latest && erd-to-proxy < erd.txt > proxy.ts"
  },
  "devDependencies": {
    "@types/integer": "^4.0.1",
    "@types/node": "^20.10.0",
    "electron": "^27.1.2",
    "knex": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "quick-erd": "^4.18.6",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@beenotung/tslib": "^22.1.1",
    "better-sqlite3": "^9.1.1",
    "better-sqlite3-proxy": "^2.4.1",
    "better-sqlite3-schema": "^3.1.2",
    "dotenv": "^16.3.1",
    "knex": "^2.4.2",
    "oklab.ts": "^2.2.5"
  }
}
